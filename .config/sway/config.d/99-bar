### Configure panel
#
# Uses colors from config.d/01-appearance
bar {
	font $font $fontsize
	separator_symbol ' | '
	position top
	status_command i3status
	status_padding 0
	status_edge_padding 12
	mode dock
	colors {
		separator $light
		background $darktransparent
		statusline $light
		focused_workspace $focused $focused $light
		active_workspace $unfocused $unfocused $light
		inactive_workspace $darktransparent $darktransparent $light
		urgent_workspace $urgent $urgent $dark
	}
}
