### Configure panel
#
# Uses colors from config.d/appearance
bar {
	font Terminus
	position top
	status_command i3status-rs
	status_padding 0
	status_edge_padding 0
	mode dock
	colors {
		separator $light
		background #28282800
		statusline $dark
		focused_workspace $focused $focused $dark
		active_workspace $unfocused $unfocused $light
		inactive_workspace $dark $dark $light
		urgent_workspace $urgent $urgent $dark
	}
}
